@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-success navbar-authorization-buttons">Sign out</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right me-auto mb-2 mb-lg-0">
        <li class="register-link nav-item">@Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-success navbar-authorization-buttons" })</li>
        <li class="nav-item">@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-success navbar-authorization-buttons" })</li>
    </ul>
}