@model SurveyME.Models.BinaryChoice

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card surveyme-input-card mb-4 shadow">
        <div class="card-header border-0 pb-0">
            <h5 class="card-title text-center fw-bold text-success">Question Editor</h5>
        </div>

        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="justify-content-center">
                <div class="row g-4 pb-3 justify-content-center">
                    <div class="input-group justify-content-center">
                        @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control surveyme-input-box mytext-area", @placeholder = "Enter the contents of the question" } })
                    </div>

                    <div class="input-group justify-content-center">
                        @Html.EditorFor(model => model.FirstOption, new { htmlAttributes = new { @class = "form-control surveyme-input-box myinput-text", @placeholder = "Enter the contents of the first option" } })
                    </div>

                    <div class="input-group justify-content-center">
                        @Html.EditorFor(model => model.SecondOption, new { htmlAttributes = new { @class = "form-control surveyme-input-box myinput-text", @placeholder = "Enter the contents of the second option" } })
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" id="SaveInputData" class="btn btn-success btn-lg surveyme-report-button">Finish up</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
